generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id              String   @id @default(cuid())
  name            String?
  email           String?  @unique
  emailVerified   DateTime?
  image           String?
  accounts        Account[]
  sessions        Session[]
  preferences     UserPreferences?
  saved           SavedContent[]
  newsletters     Newsletter[]
  newsletterItems NewsletterItem[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Account {
  id                String @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String @unique
  expires    DateTime

  @@unique([identifier, token])
}

model UserPreferences {
  id           String   @id @default(cuid())
  userId       String   @unique
  enabled      Boolean  @default(true)
  frequency    String   @default("weekly")
  timezone     String   @default("America/New_York")
  aiEnabled    Boolean  @default(true)
  maxItems     Int      @default(25)
  maxPerSub    Int      @default(7)
  includeSubs  String[] @default([])
  excludeSubs  String[] @default([])
  sendHour     Int      @default(9)
  dayOfWeek    Int?
  dayOfMonth   Int?
  lastSentAt   DateTime?
  hasOnboarded Boolean  @default(false)
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SavedContent {
  id           String   @id @default(cuid())
  userId       String
  provider     String   @default("reddit")
  externalId   String
  kind         String
  title        String?
  url          String?
  subreddit    String?
  author       String?
  score        Int?
  numComments  Int?
  createdAtUtc DateTime?
  savedAtUtc   DateTime?
  previewText  String?
  aiSummary    String?
  included     Boolean  @default(false)
  clicks       Int      @default(0)
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, provider, externalId])
  @@index([userId, included])
  @@index([userId, subreddit])
}

model Newsletter {
  id             String           @id @default(cuid())
  userId         String
  subject        String
  subjectVariant String           @default("A")
  html           String
  sentAt         DateTime         @default(now())
  opens          Int              @default(0)
  clicks         Int              @default(0)
  publicId       String?          @unique
  publicEnabled  Boolean          @default(false)
  user           User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  items          NewsletterItem[]
}

model NewsletterItem {
  id             String       @id @default(cuid())
  newsletterId   String
  savedContentId String
  clicks         Int          @default(0)
  newsletter     Newsletter   @relation(fields: [newsletterId], references: [id], onDelete: Cascade)
  content        SavedContent @relation(fields: [savedContentId], references: [id], onDelete: Cascade)
}

model SystemKV {
  key       String   @id
  value     String
  updatedAt DateTime @updatedAt
}
